{% extends 'admin.html.twig' %}

{% block title %}Actualité{% endblock %}

{% block body %}
    <h1>Actualités</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ actualite.slug }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Publié le</th>
                <td>{{ actualite.publierAt ? actualite.publierAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ actualite.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_actualite_lister') }}">Revenir à la liste</a>

    <a href="{{ path('admin_actualite_modifier', {'id': actualite.id}) }}">Modifier</a>

    {{ include('admin/actualite/_delete_form.html.twig') }}
{% endblock %}
