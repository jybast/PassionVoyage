<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Passion Voyage{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <!-- bibiothèques pour la gestion du thème -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">   
        <link rel="stylesheet" href="{{ asset('assets/css/theme_blog.css') }}">

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

       
    </head>


    <body>
        <!-- Grid container de la page -->
        <div class="grid-container">
        {% block body %}

            <!-- ########  Haut de page  ########## --> 
            {% block header %}
                <header class="header">
                    <div class="titre">
                        <h1 class="header-titre">Passion Voyage</h1>
                        <h2 class="header-caption"> Partager nos voyages en famille.</h2>
                    </div>
                    {% block navigation %}
                        
                    {% endblock %}
                </header>
            {% endblock %}

            <!-- ########## Corps de page ########## -->
            {% block main %}
                <div class="main">
                  
                </div>
            {% endblock %}

            {% block sidebar %}
                <aside class="sidebar">
                  
                </aside>
            {% endblock %}

            <!-- ######### Bas de page ########### -->
            {% block footer %}
                {% include "includes/_footer.html.twig" %}
            {% endblock %}
         
        {% endblock %}        
        </div>  <!-- Fin bloc grid-container -->

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <!-- Bootstrap Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </body>
</html>
