<form method="post" action="{{ path('user_supprimer', {'id': app.user.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce compte ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
    <button class="formulaire-bouton btn-info">Supprimer le compte</button>
</form>
